        <NavigationPage Title="Wörter" Icon="tab_about.png">
            <x:Arguments>
                <views:WortenPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Verben" Icon="tab_about.png">
            <x:Arguments>
                <views:VerbenPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Adjektive" Icon="tab_about.png">
            <x:Arguments>
                <views:VerbenPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>
